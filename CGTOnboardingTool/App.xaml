<Application x:Class="CGTOnboardingTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CGTOnboardingTool"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Window}">
            <Setter Property="FontFamily"
            Value="Leelawadee UI Semilight" />
        </Style>
        <Style TargetType="{x:Type Page}">
            <Setter Property="FontFamily"
            Value="Leelawadee UI Semilight" />
        </Style>
        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily"
            Value="Leelawadee UI Semilight" />
        </Style>
        <Style TargetType="{x:Type Label}" x:Key="FunctionParameterLabel">
            <Setter Property="FontFamily" Value="Leelawadee UI Semilight" />
            <Setter Property="Height" Value="41" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#5A5A5A" />
        </Style>
        <Style TargetType="{x:Type TextBox}" x:Key="FunctionInputBoxes">
            <Setter Property="FontFamily" Value="Leelawadee UI Semilight" />
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="462"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="TextAlignment" Value="Justify"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Background" Value="#C7CADC"/>

            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="RoundButtonMainWindow">
            <Setter Property="FontFamily" Value="Leelawadee UI Semilight" />
            <Setter Property="BorderBrush" Value="#A1A7CB"/>
            <Setter Property="Background" Value="#A1A7CB"/>
            <Setter Property="Foreground" Value="#24F9F9"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Width" Value="176"/>
            <Setter Property="FontSize" Value="32"/>

            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25" />
                </Style>
            </Style.Resources>
        </Style>
        
        <Style TargetType="{x:Type Grid}" x:Key="RoundGrid">
            
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15" />
                </Style>
            </Style.Resources>
            
        </Style>

    </Application.Resources>
</Application>
