<Window x:Class="CGTOnboardingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGTOnboardingTool"
        mc:Ignorable="d"
        Title="CGT Onboarding Tool" Height="1080" Width="1920">
    <Grid>
        <StackPanel Margin="0,0,1440,0">
            <Label Content="CGT Onboarding Tool"/>
            <Button x:Name="btnBuild" Content="Build" Click="btnBuild_Click"/>
            <Button x:Name="btnReduce" Content="Reduce" Click="btnReduce_Click"/>
            <Button x:Name="btnRebuild" Content="Rebuild" Click="btnRebuild_Click"/>
        </StackPanel>
        <Frame x:Name="mainFrame" Content="Frame" Margin="480,0,0,0" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
