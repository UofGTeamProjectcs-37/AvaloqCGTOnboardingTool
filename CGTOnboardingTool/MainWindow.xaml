<Window x:Class="CGTOnboardingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGTOnboardingTool"
        mc:Ignorable="d"
        Title="CGT Onboarding Tool" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="256"/>
            <ColumnDefinition Width="1024"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="CGT Onboarding Tool"/>
            <Button x:Name="btnBuild" Content="Build" Click="btnBuild_Click"/>
            <Button x:Name="btnReduce" Content="Reduce" Click="btnReduce_Click"/>
            <Button x:Name="btnRebuild" Content="Rebuild" Click="btnRebuild_Click"/>
        </StackPanel>
        <Frame x:Name="mainFrame" Content="Frame" NavigationUIVisibility="Hidden" Grid.Column="1"/>

    </Grid>
</Window>
