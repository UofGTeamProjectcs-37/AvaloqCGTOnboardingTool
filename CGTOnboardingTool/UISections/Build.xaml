<Page x:Class="CGTOnboardingTool.UISections.Build"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CGTOnboardingTool.UISections"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Build">


    <Grid x:Name="BuildGrid">
        <Label x:Name="LblBuildHeader" Content="Build" HorizontalAlignment="Left" Height="39" Margin="689,10,0,0" VerticalAlignment="Top" Width="101" FontSize="22"/>
        <Button x:Name="BtnBuildComplete" Content="Build" HorizontalAlignment="Left" Margin="258,379,0,0" VerticalAlignment="Top" Height="35" Width="90" FontSize="22" Click="BtnBuildComplete_Click"/>
        <Button x:Name="BtnBuildCancel" Content="Cancel" HorizontalAlignment="Left" Margin="510,378,0,0" VerticalAlignment="Top" Height="36" Width="78" FontSize="22" Click="BtnBuildCancel_Click"/>
        <TextBox x:Name="TxtBuildSecurity" HorizontalAlignment="Left" Height="26" Margin="158,70,0,0" TextWrapping="Wrap" Text="Enter The New Security Here" VerticalAlignment="Top" Width="352"/>

        <TextBox x:Name="TxtBuildCost" HorizontalAlignment="Left" Height="26" Margin="158,270,0,0" TextWrapping="Wrap" Text="Enter The Allowable Costs Here" VerticalAlignment="Top" Width="352" />

        <TextBox x:Name="TxtBuildPrice" HorizontalAlignment="Left" Height="26" Margin="158,220,0,0" TextWrapping="Wrap" Text="Enter The Price per Quantity Here" VerticalAlignment="Top" Width="352" />

        <TextBox x:Name="TxtBuildQuantity" HorizontalAlignment="Left" Height="26" Margin="158,170,0,0" TextWrapping="Wrap" Text="Enter The Quantity of Shares Here" VerticalAlignment="Top" Width="352" />


        <TextBox x:Name="TxtBuildDate" HorizontalAlignment="Left" Height="26" Margin="158,120,0,0" TextWrapping="Wrap" Text="Enter The Date Here" VerticalAlignment="Top" Width="352" />


        <TextBox x:Name="TxtBuildGross" HorizontalAlignment="Left" Height="26" Margin="158,320,0,0" TextWrapping="Wrap" Text="Enter The Gross Here" VerticalAlignment="Top" Width="352" />


        <Label x:Name="LblBuildSecurity" Content="Security" HorizontalAlignment="Left" Margin="57,65,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblBuildDate" Content="Date" HorizontalAlignment="Left" Margin="67,115,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblBuildQuantity" Content="Quantity" HorizontalAlignment="Left" Margin="55,165,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblBuildPrice" Content="Price" HorizontalAlignment="Left" Margin="67,214,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblBuildCost" Content="Cost" HorizontalAlignment="Left" Margin="66,265,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblBuildGross" Content="Gross" HorizontalAlignment="Left" Margin="63,315,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
