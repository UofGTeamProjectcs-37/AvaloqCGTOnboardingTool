<Page x:Class="CGTOnboardingTool.UISections.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CGTOnboardingTool.UISections"
      mc:Ignorable="d"
      Title="Dashboard" Width="1024" Height="705">

    <Grid Width="1024" Height="705">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="39*"/>
        </Grid.ColumnDefinitions>
        <Grid Style="{DynamicResource RoundGrid}" Height="690" Width="1001.5" Grid.ColumnSpan="2" Margin="0,8,22,7">
            <Border Margin="7.5,0,15,0" Background="#C7CADC"/>

            <Grid Style="{DynamicResource RoundGrid}" Height="100" Width="881.5" Margin="60,15,60,513">
                <Border Background="#ffffff" Opacity="0.5"/>

            </Grid>

            <Grid Style="{DynamicResource RoundGrid}" Height="30" Width="805" Margin="60,145,136,452">
                <Border Background="#ffffff" Opacity="0.5"/>

                <Label x:Name="LblReportFilterHeader" Content="Filter by:" Margin="10,-5,480,-5" Style="{DynamicResource ReportFilterLabel}"/>

                <ComboBox x:Name="cbFilter" IsEditable = "True" Width = "252" HorizontalAlignment = "Left" Margin = "100,0,0,0" SelectionChanged="cbFilter_SelectionChanged" Text="Date" Height="30">
                    <ComboBoxItem Content = "Date"/>
                    <ComboBoxItem Content = "Security"/>
                    <ComboBoxItem Content = "Function"/>
                </ComboBox>

                <ComboBox x:Name="cbFilterFunction" IsEditable = "True" Width = "252" HorizontalAlignment = "Left" Margin = "370,0,0,0" SelectionChanged="cbFilter_SelectionChanged" Visibility="Hidden" Text="--Select Function--" Grid.ColumnSpan="2" Height="30">

                    <ComboBoxItem Content = "Build"/>
                    <ComboBoxItem Content = "Reduce"/>
                    <ComboBoxItem Content = "Rebuild"/>
                </ComboBox>

                <ComboBox x:Name="cbFilterSecurity" IsEditable = "True" Width = "252" HorizontalAlignment = "Left" Margin = "370,0,0,0" SelectionChanged="cbFilter_SelectionChanged" Visibility="Hidden" Text="--Select Security--" Grid.ColumnSpan="2" Height="30">

                    <ComboBoxItem Content = "GSK"/>
                    <ComboBoxItem Content = "TSLA"/>
                    <ComboBoxItem Content = "FGE"/>
                </ComboBox>

                <Label x:Name="LblReportFilterDateFrom" Content="From:" Margin="370,-5,151,-5" Visibility="Visible" Style="{DynamicResource ReportFilterLabel}"/>
                <ComboBox x:Name="cbFilterDateFrom" IsEditable = "True" Width = "146" HorizontalAlignment = "Left" Margin = "438,0,0,0" SelectionChanged="cbFilter_SelectionChanged" Visibility="Visible" Text="--Select Start Date--" Height="30">
                    <ComboBoxItem Content = "2019/01"/>
                    <ComboBoxItem Content = "2019/05"/>
                    <ComboBoxItem Content = "2020/05"/>
                </ComboBox>
                <Label x:Name="LblReportFilterDateTo" Content="To:" Margin="614,-5,155,-5" Visibility="Visible" Style="{DynamicResource ReportFilterLabel}"/>
                <ComboBox x:Name="cbFilterDateTo" IsEditable = "True" Width = "135" HorizontalAlignment = "Left" Margin = "658,0,0,0" SelectionChanged="cbFilter_SelectionChanged" Visibility="Visible" Text="--Select End Date--" Grid.Column="1" Height="30">
                    <ComboBoxItem Content = "2020/05"/>
                    <ComboBoxItem Content = "2021/01"/>
                    <ComboBoxItem Content = "2021/11"/>
                </ComboBox>
            </Grid>

            <Grid Style="{DynamicResource RoundGrid}" Height="412.5">
                <Border Background="#ffffff" Opacity="0.5" Margin="60,78,60,-60"/>
                <DataGrid Name="DashboardReportView" Margin="75,78,75,-60" AutoGenerateColumns="False" HorizontalGridLinesBrush="Black" VerticalGridLinesBrush="Black" Background="Transparent" BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="EntryID" Binding="{Binding Path=Id}" IsReadOnly="True" Width="auto" Visibility="Hidden"/>
                        <DataGridTextColumn Header="Function" Binding="{Binding Path=Function}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Security" Binding="{Binding Path=Security}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Quantity" Binding="{Binding Path=Quantity}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Path=Price}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Cost" Binding="{Binding Path=AssociatedCosts}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Gross" Binding="{Binding Path=Gross}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="+/- Gain Loss" Binding="{Binding Path=GainLoss}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Holdings" Binding="{Binding Path=Holdings}" IsReadOnly="True" Width="auto"/>
                        <DataGridTextColumn Header="Section 104" Binding="{Binding Path=Section104}" IsReadOnly="True" Width="auto"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>

        <Grid Height ="50" Width="881.5" Margin="60,630,82,15" Grid.ColumnSpan="2">

            <Button x:Name="btnSave" Content="Save" Margin="0,0,706,0" Style="{DynamicResource RoundButtonReport}"/>
            <Button x:Name="btnCancel" Content="Cancel" Margin="706,0,0,0" Style="{DynamicResource RoundButtonReport}"/>
            <Button x:Name="btnOpen" Content="Open" Margin="220,0,486,0" Style="{DynamicResource RoundButtonReport}"/>
            <Button x:Name="btnExport" Content="Export" Margin="485,0,220,0" Style="{DynamicResource RoundButtonReport}"/>
        </Grid>
    </Grid>
</Page>
